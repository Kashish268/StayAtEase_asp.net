@model ProfileDetailsViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="bg-white shadow p-4">
        <h2 class="fw-bold text-left mb-4">Profile Details</h2>

        <div class="text-center">
            <img src="/assets/profile.png" alt="Profile" height="100" width="100" class="rounded-circle border profile-img">
            <div class="mt-2">
                <label class="btn btn-outline-primary btn-sm">
                    Change Picture
                    <input type="file" class="d-none" onchange="previewImage(event)">
                </label>
            </div>
            <div class="text-muted mt-2">
                You joined StayAtaese on 
            </div>
        </div>

        <form method="post" class="mt-4">
            <!-- Personal Details -->
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">First Name</label>
                    <input type="text" class="form-control" name="FirstName" value="@Model.FirstName">
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Email Address</label>
                    <input type="email" class="form-control" name="Email" value="@Model.Email">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Phone Number</label>
                    <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                </div>
            </div>

            <!-- Save Button -->
            <div class="d-flex justify-content-end mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>

        <!-- Change Password Section -->
        <div class="mt-5">
            <h4 class="fw-bold">Change Password</h4>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Current Password</label>
                    <input type="password" class="form-control" name="CurrentPassword">
                </div>
                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password" class="form-control" name="NewPassword">
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" name="ConfirmPassword">
                </div>
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-primary">Update Password</button>
                </div>
            </form>
        </div>

        <!-- Logout Section -->
        <div class="mt-4 border-top pt-3 d-flex justify-content-between align-items-center">
            <div>
                <h5 class="fw-bold mb-1">Logout</h5>
                <p class="text-muted mb-0">End your current session and sign out securely</p>
            </div>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-link text-danger fw-bold">
                <i class="fas fa-sign-out-alt me-1"></i> Logout
            </a>
        </div>

    </div>
</div>

<!-- JavaScript for Profile Image Preview -->
<script>
    function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function () {
            document.querySelector(".profile-img").src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>

<!-- Styling -->
<style>
    .profile-img {
        object-fit: cover;
    }

    .btn-link.text-danger {
        text-decoration: none;
        font-size: 16px;
    }

    input.form-control, textarea.form-control {
        border: none;
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 10px;
        outline: none;
        box-shadow: none;
    }
</style>
