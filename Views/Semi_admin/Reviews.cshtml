@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
    ViewData["ActivePage"] = "Reviews";
}

@functions {
    public class Review
    {
        public int Id { get; set; } // Added Id property
        public string Name { get; set; }
        public string Date { get; set; }
        public int Rating { get; set; }
        public string ReviewText { get; set; }
        public string Image { get; set; }
    }

    public List<Review> GetReviews()
    {
        return new List<Review>
        {
            new Review { Id = 1, Name = "Alice Johnson", Date = "2025-03-10", Rating = 5, ReviewText = "Great experience!", Image = "https://via.placeholder.com/40" },
            new Review { Id = 2, Name = "Michael Smith", Date = "2025-03-12", Rating = 4, ReviewText = "Good service, but room for improvement.", Image = "https://via.placeholder.com/40" },
            new Review { Id = 3, Name = "Sophie Brown", Date = "2025-03-15", Rating = 3, ReviewText = "Average stay, nothing special.", Image = "https://via.placeholder.com/40" },
            new Review { Id = 4, Name = "Daniel White", Date = "2025-03-17", Rating = 5, ReviewText = "Absolutely loved it!", Image = "https://via.placeholder.com/40" },
            new Review { Id = 5, Name = "Emma Green", Date = "2025-03-18", Rating = 4, ReviewText = "Nice place, would visit again.", Image = "https://via.placeholder.com/40" }
        };
    }
}

@{
    var reviews = GetReviews();
    int currentPage = 1;
    int pageSize = 5;
    int totalReviews = reviews.Count;
    int totalPages = (int)Math.Ceiling((double)totalReviews / pageSize);
}

<div class="container mx-auto p-6 px-7 mt-6">
    <h2 class="text-2xl font-bold text-gray-800">Property Reviews</h2>
    <p class="text-gray-500">Sunset Heights Apartments</p>

    <!-- Search Bar -->
    <form method="get" class="relative w-full max-w-md my-4">
        <input type="text"
               name="searchTerm"
               class="border border-gray-300 rounded-full py-2 pl-10 pr-4 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 w-full"
               placeholder="Search reviews..." />
        <button type="submit" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-500">
            🔍
        </button>
    </form>

    <!-- Review Table -->
    <div class="overflow-x-auto">
        <table class="min-w-full ">
            <thead class="bg-gray-100 text-left">
                <tr>
                    <th class="p-3">Reviewer</th>
                    <th class="p-3">Date</th>
                    <th class="p-3">Rating</th>
                    <th class="p-3">Review</th>
                    <th class="p-3">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (reviews.Any())
                {
                    @foreach (var review in reviews)
                    {
                        <tr class="even:bg-gray-50">
                            <td class="p-3 flex items-center">
                                <img src="@review.Image" alt="Reviewer" class="w-10 h-10 rounded-full mr-3" />
                                <span class="font-medium">@review.Name</span>
                            </td>
                            <td class="p-3">@review.Date</td>
                            <td class="p-3">
                                <span class="text-yellow-500">
                                    @for (int i = 0; i < review.Rating; i++)
                                    {
                                        <span>★</span>
                                    }
                                    @for (int i = review.Rating; i < 5; i++)
                                    {
                                        <span class="text-gray-300">★</span>
                                    }
                                </span>
                            </td>
                            <td class="p-3">@review.ReviewText</td>
                            <td class="p-3">
                                <button class="text-red-500 font-semibold hover:text-red-600 hover:underline"
                                        data-review-id="@review.Id"
                                        onclick="openReportModal(this)">
                                    🚨 Report
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-gray-500 p-4">No reviews found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="flex justify-between items-center mt-6 pb-6">
        <p class="text-gray-500 text-sm">
            Showing @(Math.Min(((currentPage - 1) * pageSize) + 1, totalReviews))
            to @(Math.Min(currentPage * pageSize, totalReviews))
            of @totalReviews reviews
        </p>
        <nav class="flex space-x-2">
            <a href="?page=@(currentPage - 1)"
               class="px-4 py-2 text-gray-500 bg-gray-100 hover:bg-gray-200 rounded-lg @(currentPage == 1 ? "pointer-events-none opacity-50" : "")">
                Previous
            </a>
            <span class="px-4 py-2 rounded-lg text-white bg-blue-500">@currentPage</span>
            <a href="?page=@(currentPage + 1)"
               class="px-4 py-2 text-gray-500 bg-gray-100 hover:bg-gray-200 rounded-lg @(currentPage == totalPages ? "pointer-events-none opacity-50" : "")">
                Next
            </a>
        </nav>
    </div>
</div>

<script>
    function openReportModal(button) {
        var reviewId = button.getAttribute("data-review-id");
        document.getElementById("selectedReviewId").value = reviewId;
        document.getElementById("reportModal").style.display = "block";
    }
</script>

<!-- Hidden modal -->
<div id="reportModal" style="display:none;">
    <form method="post" action="/Reviews/Report">
        <input type="hidden" id="selectedReviewId" name="reviewId" />
        <p>Are you sure you want to report this review?</p>
        <button type="submit">Confirm</button>
        <button type="button" onclick="document.getElementById('reportModal').style.display='none'">Cancel</button>
    </form>
</div>
