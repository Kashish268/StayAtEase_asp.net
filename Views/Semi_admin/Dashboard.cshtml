@model DashboardViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
    ViewData["ActivePage"] = "Dashboard";
    
}


<div class="bg-gray-100 min-h-screen p-8">
    <h2 class="text-2xl font-bold text-gray-800">Dashboard</h2>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 text-left my-6">
        @{
            var cards = new List<dynamic>
        {
        new { Icon = "fa-building", Label = "Total Properties", Value = Model.TotalProperties },
        new { Icon = "fa-list text-green-500", Label = "Active Listings", Value = Model.ActiveListings },
        new { Icon = "fa-envelope text-orange-500", Label = "Total Inquiries", Value = Model.TotalInquiries },
        new { Icon = "fa-star", Label = "Review Rating", Value = Model.ReviewRating }
        };

            foreach (var card in cards)
            {
                <div class="bg-white p-4 shadow-lg rounded-lg">
                    <i class="fas @card.Icon text-blue-500 text-3xl"></i>
                    <h3 class="text-xl font-bold mt-2">@card.Value</h3>
                    <p class="text-gray-600">@card.Label</p>
                </div>
            }
        }
    </div>

    <!-- Latest Messages -->
    <div class="bg-white shadow-lg p-4 rounded-lg">
        <div class="flex justify-between items-center mb-4">
            <h4 class="text-xl font-bold">Latest Messages</h4>
            <a href="#" class="text-blue-500">View All</a>
        </div>
        <table class="w-full">
            <thead>
                <tr class="bg-gray-100 text-left">
                    <th class="p-3">Guest Name</th>
                    <th class="p-3">Property Id</th>
                    <th class="p-3">Email</th>
                    <th class="p-3">Contact No</th>
                    <th class="p-3">Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model.Messages)
                {
                    <tr class="even:bg-gray-50">
                        <td class="p-3">@msg.Name</td>
                        <td class="p-3">@msg.PropertyId</td>
                        <td class="p-3">@msg.Email</td>
                        <td class="p-3">@msg.Contact</td>
                        <td class="p-3">@msg.Message</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Latest Reviews -->
    <div class="mt-8">
        <div class="flex justify-between items-center mb-4">
            <h4 class="text-xl font-bold">Latest Reviews</h4>
            <a href="#" class="text-blue-500">View All</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            @foreach (var review in Model.Reviews)
            {
                <div class="bg-white p-4 shadow-lg rounded-lg">
                    <div class="flex items-center mb-2">
                        <img src="@review.ImageUrl" alt="Profile" class="w-12 h-12 rounded-full mr-3" />
                        <div>
                            <p class="font-bold">@review.Name</p>
                            <small class="text-gray-500">@review.Date</small>
                        </div>
                    </div>
                    <p>@Html.Raw(new string('⭐', review.Rating))</p>
                    <p class="text-gray-700 mt-2">@review.Text</p>
                    <p class="text-sm text-gray-500">@review.Property</p>
                </div>
            }
        </div>
    </div>

    <div class="flex justify-center text-white mt-8">
        <a href="/Property/Add" class="bg-blue-700 text-white px-6 py-3 rounded-lg shadow-md font-semibold flex items-center gap-2">
            <i class="fas fa-plus-square"></i> Add New Property
        </a>
    </div>
</div>


