@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
    ViewData["ActivePage"] = "Property_List";
}

@model MyListingsViewModel

<div class="container mt-4 bg-light">
    <h2 class="mb-6 p-4">My Listings</h2>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <!-- Total Properties -->
        <div class="col-md-4">
            <div class="card text-left p-3">
                <p class="text-muted d-flex justify-content-between align-items-center">
                    Total Properties
                    <i class="fas fa-home text-primary"></i>
                </p>
                <h3>@Model.TotalProperties</h3>
            </div>
        </div>

        <!-- Active Listings -->
        <div class="col-md-4">
            <div class="card text-left p-3">
                <p class="text-muted d-flex justify-content-between align-items-center">
                    Active Listings
                    <i class="fas fa-chart-bar text-primary"></i>
                </p>
                <h3>@Model.ActiveListings</h3>
            </div>
        </div>

        <!-- Inquiries -->
        <div class="col-md-4">
            <div class="card text-left p-3">
                <p class="text-muted d-flex justify-content-between align-items-center">
                    Inquiries
                    <i class="fas fa-calendar-alt text-primary"></i>
                </p>
                <h3>@Model.TotalInquiries</h3>
            </div>
        </div>
    </div>


    <!-- Search Bar and Add Property Button -->
    <div class="d-flex justify-content-between align-items-center p-3 mb-3 rounded shadow-sm bg-white">
        <!-- Search Form -->
        <form method="get" class="flex-grow-1 me-3">
            <div class="input-group">
                <span class="input-group-text bg-transparent border-0">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" name="searchTerm" class="form-control border-0" placeholder="Search properties..." value="@Model.SearchTerm">
            </div>
        </form>

        <!-- Filter Dropdown -->
        <div class="dropdown me-3">
            <button class="btn btn-light border dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
                All
            </button>
            <ul class="dropdown-menu" aria-labelledby="filterDropdown">
                <li><a class="dropdown-item" href="?filter=all">All</a></li>
                <li><a class="dropdown-item" href="?filter=available">Available</a></li>
                <li><a class="dropdown-item" href="?filter=unavailable">Unavailable</a></li>
            </ul>
        </div>


        <!-- Add Property Button -->
        <a asp-action="AddProperty" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Property
        </a>
    </div>


    <!-- Listings Table -->
    <div class="table-responsive">
        <table class="table align-middle table-hover">
            <thead class="table-light">
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Price / month</th>
                    <th>Area (sq ft)</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Properties != null && Model.Properties.Any())
                {
                    @foreach (var property in Model.Properties)
                    {
                        <tr>
                            <!-- Property Image -->
                            <td>
                                <img src="@(property.ImageUrl ?? "https://via.placeholder.com/70")"
                                     alt="Property" class="rounded img-fluid" width="70">
                            </td>

                            <!-- Property Title -->
                            <td>
                                <div class="fw-semibold">@property.Title</div>
                                <small class="text-muted">ID: @property.Id</small>
                            </td>

                            <!-- Price -->
                            <td class="fw-bold">₹ @property.Price</td>

                            <!-- Area -->
                            <td>@property.Area sq ft</td>

                            <!-- Address -->
                            <td>@property.Address</td>

                            <!-- Status -->
                            <td>
                                <span class="badge @(property.IsAvailable ? "text-success bg-success bg-opacity-10" : "text-danger bg-danger bg-opacity-10")">
                                    @(property.IsAvailable ? "Available" : "Unavailable")
                                </span>
                            </td>

                            <!-- Action -->
                            <td>
                                <a asp-action="ViewProperty" asp-route-id="@property.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No properties found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


