@model WebApplication1.Models.DashboardViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

@functions {
    public class PropertyMessage
    {
        public string Name { get; set; }
        public string PropertyId { get; set; }
        public string Email { get; set; }
        public string Contact { get; set; }
        public string Message { get; set; }
    }

    List<PropertyMessage> messages = new List<PropertyMessage>
    {
        new PropertyMessage { Name = "Sarah Johnson", PropertyId = "P-101", Email = "sarah@example.com", Contact = "1234567890", Message = "Is this property still available?" },
        new PropertyMessage { Name = "Michael Brown", PropertyId = "P-102", Email = "michael@example.com", Contact = "9876543210", Message = "Can I schedule a visit?" },
        new PropertyMessage { Name = "Victoria Gibson", PropertyId = "P-103", Email = "victoria@example.com", Contact = "9182736450", Message = "What are the lease terms?" },
        new PropertyMessage { Name = "Ethan Wilson", PropertyId = "P-104", Email = "ethan@example.com", Contact = "5647382910", Message = "Are there any nearby schools?" },
        new PropertyMessage { Name = "Robert Johnson", PropertyId = "P-105", Email = "robert@example.com", Contact = "1122334455", Message = "What is the security deposit?" }
    };
}

<div class="container mt-4  p-2">
    <!-- Dashboard Cards -->
    <div class="row g-4 text-left">
        <div class="col-md-3">
            <div class="card  p-3 shadow-sm">
                <i class="fas fa-building text-primary fa-2x"></i>
                <h3 class="mt-2">24</h3>
                <p>Total Properties</p>

            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <i class="fas fa-check-circle text-success fa-2x"></i>
                <h3 class="mt-2">18</h3>
                <p>Active Listings</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card  p-3 shadow-sm">
                <i class="fas fa-envelope text-warning fa-2x"></i>
                <h3 class="mt-2">156</h3>
                <p>Total Inquiries</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card  p-3 shadow-sm">
                <i class="fas fa-star text-info fa-2x"></i>
                <h3 class="mt-2">4.8</h3>
                <p>Review Rating</p>
            </div>
        </div>
    </div>

    <!-- Latest Messages -->
    <div class="card shadow-sm border-0 rounded-3 p-4 mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3 px-3">
            <h5 class="fw-bold mb-0">Latest Messages</h5>
            <a href="#" class="text-primary text-decoration-none">View All</a>
        </div>
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="py-3">Guest Name</th>
                        <th class="py-3">Property Id</th>
                        <th class="py-3">Email Address</th>
                        <th class="py-3">Contact No</th>
                        <th class="py-3">Message</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var msg in messages.Select((m, index) => new { m, index }))
                    {
                        <tr class="@(msg.index % 2 == 0 ? "bg-white" : "bg-light")">
                            <td class="py-3 fw-medium">@msg.m.Name</td>
                            <td class="py-3">@msg.m.PropertyId</td>
                            <td class="py-3">@msg.m.Email</td>
                            <td class="py-3">@msg.m.Contact</td>
                            <td class="py-3">@msg.m.Message</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>


    <!-- Latest Reviews -->
    <div class="mt-4 p-3 rounded shadow-sm">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Latest Reviews</h4>
            <a href="#" class="text-primary text-decoration-none">View All</a>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <div class="d-flex align-items-center">
                        <img src="/assets/profile.png" alt="User Image" class="rounded-circle me-3" style="width: 40px; height: 40px;">
                        <div>
                            <h5 class="mb-0">Lisa Anderson</h5>
                            
                            <small class="text-muted">Feb 8, 2024</small>
                        </div>
                        
                    </div>
                    <div class="text-warning">
                        ★★★★★
                    </div>
                    <p class="mt-2">Great location and comfortable stay. Would visit again.</p>
                    <small class="text-muted">Downtown Loft</small>
                </div>
            </div>


            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <div class="d-flex align-items-center">
                        <img src="/assets/profile.png" alt="User Image" class="rounded-circle me-3" style="width: 40px; height: 40px;">
                        <div>
                            <h5 class="mb-0">Lisa Anderson</h5>
                           
                            <small class="text-muted">Feb 8, 2024</small>
                        </div>
                      
                    </div>
                    <div class="text-warning">
                        ★★★★★
                    </div>
                    <p class="mt-2">Great location and comfortable stay. Would visit again.</p>
                    <small class="text-muted">Downtown Loft</small>
                </div>
            </div>


            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <div class="d-flex align-items-center">
                        <img src="/assets/profile.png" alt="User Image" class="rounded-circle me-3" style="width: 40px; height: 40px;">
                        <div>
                            <h5 class="mb-0">Lisa Anderson</h5>
                            
                            <small class="text-muted">Feb 8, 2024</small>
                        </div>
                       

                    </div>
                    <div class="text-warning">
                        ★★★★★
                    </div>
                    <p class="mt-2">Great location and comfortable stay. Would visit again.</p>
                    <small class="text-muted">Downtown Loft</small>
                </div>
            </div>


            <!-- Add New Property Button -->
            <div class="text-center mt-4">
                <a href="#" class="btn btn-primary px-4 py-2">
                    <i class="fas fa-plus"></i> Add New Property
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .table-striped tbody tr:nth-of-type(even) {
        background-color: #f8f9fa; /* Light Gray */
    }
</style>
