@model RegisterViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StayAtEase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="\assets\StayAtEase.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    @* for review slider *@


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="/" class="navbar-brand">
                    <img src="\assets\StayAtEase.png" alt="Logo" class="nav-logo"> <!-- Add your logo image -->
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"] == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"] == "Privacy" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Privacy">Properties</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"] == "WishList" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="WishList">Wishlist</a>
                        </li>
                        <li class="nav-item">
                            <button class="btn btn-primary" id="openLoginModal">Login</button>
                        </li>
                    </ul>


                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Login Modal (always present in the layout) -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="border-radius: 10px;">
                <div class="modal-header text-center w-100 d-block">
                    <h4 class="modal-title fw-bold">Welcome Back</h4>
                    <p class="modal-subtitle" style="color:#4B5563;">Log in to your account</p>
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="loginContent">
                        <!-- Login form will be loaded here by AJAX -->
                    </div>
                    <p class="mt-3">
                        Don't have an account?
                        <a href="#" id="openRegister" data-bs-toggle="modal" data-bs-target="#registerModal">Register</a>
                    </p>

                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="border-radius: 10px;">
                <div class="modal-header text-center w-100 d-block">
                    <h5 class="modal-title fw-bold" id="registerModalLabel">Register your account</h5>
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="registerContent">
                        <!-- Register form will be loaded here -->

                        <form id="registerForm">
                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-sm-12 col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Phone Number *</label>
                                        <input type="text" class="form-control" name="phone" id="phone" placeholder="Enter your phone number" asp-for="Phone">
                                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Phone)</span>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Enter Verification Code</label>
                                        <div class="verification-code d-flex">
                                            <input type="text" class="form-control code-input" maxlength="1" asp-for="VerificationCode">
                                            <input type="text" class="form-control code-input" maxlength="1" asp-for="VerificationCode">
                                            <input type="text" class="form-control code-input" maxlength="1" asp-for="VerificationCode">
                                            <input type="text" class="form-control code-input" maxlength="1" asp-for="VerificationCode">
                                            <input type="text" class="form-control code-input" maxlength="1" asp-for="VerificationCode">
                                            <input type="text" class="form-control code-input" maxlength="1" asp-for="VerificationCode">
                                        </div>
                                        <span class="text-danger">@Html.ValidationMessageFor(m => m.VerificationCode)</span>
                                        <small>We've sent a code to your phone <a href="#">Resend Code</a></small>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Full Name *</label>
                                        <input type="text" class="form-control" name="fullname" id="fullname" placeholder="Enter your full name" asp-for="FullName">
                                        <span class="text-danger">@Html.ValidationMessageFor(m => m.FullName)</span>
                                    </div>
                                </div>

                                <!-- Right Column -->
                                <div class="col-sm-12 col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Email Address *</label>
                                        <input type="email" class="form-control" name="email" id="email" placeholder="your@email.com" asp-for="Email">
                                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Password *</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" name="password" id="password" placeholder="Create a password" asp-for="Password">
                                        </div>
                                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Confirm Password *</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm your password" asp-for="ConfirmPassword">
                                        </div>
                                        <span class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label d-block">I am a... *</label>
                                        <div class="radio-group">
                                            <input type="radio" name="userType" value="Tenant" id="tenant" asp-for="UserType">
                                            <label for="tenant">🏠 Tenant</label>
                                            <input type="radio" name="userType" value="RoomOwner" id="roomOwner" asp-for="UserType">
                                            <label for="roomOwner">🔑 Room Owner</label>
                                        </div>
                                        <span class="text-danger">@Html.ValidationMessageFor(m => m.UserType)</span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3 text-center">
                                <input type="checkbox" id="terms" asp-for="TermsAccepted">
                                <label for="terms">I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></label>
                                <small class="text-danger d-none" id="termsError">You must agree to the terms.</small>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Create Account</button>
                            </div>
                        </form>

                    </div>
                    <p class="mt-3">
                        Already have an account?
                        <a href="#" id="openLogin">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_Footer")
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


   </body>
</html>
