@{
    ViewData["Title"] = "Forgotpassword";
}

<style>
    .forgot-container {
        min-height: 100vh;
        display: flex;
        flex-wrap: wrap;
    }

    .forgot-image {
        background: url('/assets/forgotpassword.jpg') no-repeat center center;
        background-size: cover;
        height: 300px;
    }

    @@media (min-width: 768px) {
        .forgot-image

    {
        height: auto;
    }

    }

    .form-box {
        max-width: 400px;
        width: 100%;
        padding: 2rem;
    }

    .error-text {
        color: red;
        font-size: 0.9rem;
    }
</style>

<div class="container-fluid forgot-container">
    <!-- Left Side Image -->
    <div class="col-12 col-md-6 p-0">
        <div class="forgot-image w-100 h-100"></div>
    </div>

    <!-- Right Side Form -->
    <div class="col-12 col-md-6 d-flex align-items-center justify-content-center bg-white">
        <div class="form-box">
            <h4 class="mb-2">Forgot Password</h4>
            <p class="text-muted">Enter your email and we’ll send you a link to reset your password.</p>

            @if (ViewBag.Error != null)
            {
                <div class="error-text mb-2">@ViewBag.Error</div>
            }

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }

            <form method="post" asp-action="ForgotPassword" asp-controller="Home" id="forgotForm">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="Email" value="@Model?.Email" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</div>

