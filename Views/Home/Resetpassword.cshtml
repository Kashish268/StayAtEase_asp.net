
@{
    ViewData["Title"] = "Resetpassword";
}
@model ResetPasswordViewModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .reset-container {
        min-height: 100vh;
        display: flex;
        flex-wrap: wrap;
    }

    .reset-image {
        background: url('/assets/resetpassword.jpg') no-repeat center center;
        background-size: cover;
        height: 300px;
    }

    @@media (min-width: 768px) {
        .reset-image {
            height: auto;
        }
    }

    .form-box {
        max-width: 400px;
        width: 100%;
        padding: 2rem;
    }

    .error-text {
        color: red;
        font-size: 0.9rem;
    }
</style>

<div class="container-fluid reset-container">
    <!-- Left Side Image -->
    <div class="col-12 col-md-6 p-0">
        <div class="reset-image w-100 h-100"></div>
    </div>

    <!-- Right Side Form -->
    <div class="col-12 col-md-6 d-flex align-items-center justify-content-center bg-white">
        <div class="form-box">
            <h4 class="mb-2">Reset Your Password</h4>
            <p class="text-muted">Enter your new password below.</p>

            @if (ViewBag.Error != null)
            {
                <div class="error-text mb-2">@ViewBag.Error</div>
            }

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }

            <form method="post" asp-action="ResetPassword" asp-controller="Home">
                <input type="hidden" name="Token" value="@Context.Request.Query["token"]" />

                <div class="mb-3">
                    <label for="Password" class="form-label">New Password</label>
                    <input type="password" class="form-control" id="Password" name="Password"
                           required minlength="6" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>

                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword"
                           required minlength="6" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>

                <div class="text-danger" id="passwordError" style="display:none;">Passwords do not match</div>

                <button type="submit" class="btn btn-primary w-100" onclick="return validatePassword()">Reset Password</button>
            </form>
        </div>
    </div>
</div>

