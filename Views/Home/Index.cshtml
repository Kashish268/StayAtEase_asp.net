@{
    ViewData["Title"] = "Home Page";
}
@* <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" /> *@
@* <meta http-equiv="Pragma" content="no-cache" /> *@
@* <meta http-equiv="Expires" content="0" /> *@

<div class="hero d-flex align-items-center justify-content-center text-center">
    <div class="overlay"></div>
    <div class="container content">
        <h1 class="fw-bold text-white mb-4" style="letter-spacing:1px;">Find Your Perfect Home</h1>
        <div class="search-container p-4 rounded shadow-lg d-inline-block">
            <form method="get" action="/Home/Privacy">
                <div class="d-flex flex-wrap justify-content-center">
                    <select name="location" class="form-select me-2 mb-2 search-input">
                        <option value="" selected>📍 Location</option>
                        <option>Rajkot</option>
                        <option>Ahemdabad</option>
                        <option>Baroda</option>
                    </select>
                    <select name="propertyType" class="form-select me-2 mb-2 search-input">
                        <option value="" selected>🏠 Property Type</option>
                        <option>Apartment</option>
                        <option>House</option>
                        <option>Villa</option>
                    </select>
                    <select name="priceRange" class="form-select me-2 mb-2 search-input">
                        <option value="" selected>💰 Budget</option>
                        <option value="0-5000">Under ₹5,000</option>
                        <option value="5001-10000">₹5,001 - ₹10,000</option>
                        <option value="10001-15000">₹10,001 - ₹15,000</option>
                        <option value="15001-20000">₹15,001 - ₹20,000</option>
                        <option value="20001-30000">₹20,001 - ₹30,000</option>
                        <option value="30001">Above ₹30,000</option>
                    </select>
                    <button type="submit" class="btn btn-primary search-button">Search</button>
                </div>
            </form>
        </div>
    </div>
    </div>
</div>

<!-- Featured Properties Section -->
<div class="p-5" style="background-color:#F9FAFB;">
    <div class="d-flex justify-content-between align-items-center mb-4" style="padding-left:10px; padding-right:10px;">
        <h2 class="fw-bold mt-3" style="letter-spacing:0.1px;">Featured Properties</h2>
        <a asp-action="Privacy" asp-controller="Home" class="btn btn-outline-primary" style="background-color:#1A237E;color:white;border-color:#1A237E">
            View All
        </a>
    </div>
    <div class="row g-4">
        @model List<WebApplication1.Models.UserProperty>
        <!-- Other index page content remains the same -->

        <div class="row g-4">
            @foreach (var property in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="@property.ImagePath" class="card-img-top" alt="Property Image">
                        <div class="card-body">
                            <h5 class="card-title">@property.Title</h5>
                            <p class="text-muted">📍 @property.Location</p>
                            <h6 class="text-primary fw-bold">@property.Price</h6>
                            <p class="text-warning">⭐ @property.Rating</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="card about-card">
    <div class="row g-0 align-items-center">
        <div class="col-md-7 p-5">
            <div class="card-body">
                <h2 class="card-title" style="letter-spacing:0.7px;">About StayAtEase</h2>
                <p class="card-text" style="letter-spacing:0.5px;">
                    StayAtEase is a hassle-free platform designed to simplify the process of finding and renting properties. 
                    Whether you are a tenant searching for a cozy and comfortable home or a property owner looking to rent out your space, StayAtEase ensures a smooth, secure, and efficient experience.
                    Tenants can browse through a wide range of verified listings, filter options based on their preferences, and directly connect with property owners to schedule visits.
                    Property owners can easily list their properties, manage inquiries, and secure reliable tenants through a streamlined dashboard.
                </p>
                <a asp-action="Privacy" asp-controller="Home" class="btn btn-primary">Explore Listings</a>
            </div>
        </div>
        <div class="col-md-5">
            <img src="/assets/Aboutus.jpg" class="img-fluid rounded about-image" alt="StayAtEase"
                 style="width: 100%; max-width: 500px; height: 400px; object-fit: cover;margin-top:30px">


        </div>
    </div>
</div>

<div class="my-5 py-5" style="background-color:#F9FAFB;">
    <h2 class="text-center fw-bold mb-4">Why Choose StayAtEase?</h2>
    <div class="container pb-3">
        <div class="row g-4 px-3">
            <div class="col-md-4 col-sm-6">
                <div class="feature-card">
                    <i class="fa fa-check-circle feature-icon"></i>
                    <h5>Verified Listings</h5>
