@{
    ViewData["Title"] = "WishList";
    var isLoggedIn = (bool)ViewData["IsLoggedIn"];
}

<div class="p-5" style="background-color:#F9FAFB;">
    <h2 class="fw-bold" style="letter-spacing:0.1px; margin-left:12px;">My WishList</h2>
    <p style="letter-spacing:0.1px; margin-left:12px;color:#64748B;">Your saved properties</p>

    <div class="row g-4">
        @if (isLoggedIn)
        {
          @model List<WebApplication1.Models.UserProperty>

<div class="container py-4">
    <div class="row g-4">
        @foreach (var property in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm position-relative">
                    <img src="@property.ImagePath" class="card-img-top" alt="Image of @property.Title">

                    <!-- Red heart, because these are wishlisted -->
                    <button class="like-btn position-absolute top-0 end-0 m-2">
                        <i class="fa fa-heart text-danger"></i>
                    </button>

                    <div class="card-body">
                        <h5 class="card-title">@property.Title</h5>
                        <p class="text-muted">📍 @property.Location</p>

                        <div class="d-flex justify-content-between text-muted mb-2">
                            <span><i class="fa fa-bed"></i> @property.Beds beds</span>
                            <span><i class="fa fa-bath"></i> @property.Baths baths</span>
                            <span><i class="fa fa-expand"></i> @property.Size</span>
                        </div>

                        <div class="d-flex align-items-center mb-2">
                            <span class="text-warning fw-semibold me-2">⭐ @property.Rating</span>
                            <small class="text-muted">(@property.Reviews reviews)</small>
                        </div>

                        <h6 class="text-primary fw-bold">@property.Price</h6>

                        <a class="btn btn-primary w-100 mt-2" asp-controller="Home" asp-action="Property_details" asp-route-id="@property.PropertyID">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>







        }
        else
        {
            <div class="col-12 d-flex justify-content-center">
                <div class="card shadow-sm" style="width: 600px; border-radius: 20px; overflow: hidden;">
                    <!-- Top image -->
                    <img src="/assets/without_login.jpg" class="card-img-top" alt="Please Login" style="height: 250px; object-fit: cover;">

                    <!-- Body with icon + text -->
                    <div class="card-body text-center">
                        <!-- Icon or small image -->
                        @* <img src="/assets/lock-icon.png" alt="Lock Icon" style="width: 50px; height: 50px; margin-bottom: 15px;"> *@

                        <h5 class="card-title text-danger fw-bold">Please login before accessing wishlist.</h5>
                        <p class="card-text text-muted">You need to be logged in to view your saved properties.</p>
                        @* <a href="/Account/Login" class="btn btn-primary mt-2">Go to Login</a> *@
                    </div>
                </div>
            </div>

        }
    </div>
</div>
