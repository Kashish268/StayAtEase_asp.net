                @if (isLoggedIn)
                {
                    <form method="POST" action="@Url.Action(Model.UserReview != null ? "UpdateReview" : "SubmitReview", "Home")">
                        <label class="fw-semibold">Rating</label>
                        <div class="mb-3">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="star @(Model.UserReview != null && i <= Model.UserReview.Rating ? "text-warning" : "")" data-value="@i">★</span>
                            }
                        </div>

                        <input type="hidden" name="rating" id="ratingInput" value="@(Model.UserReview?.Rating ?? 0)" />

                        <div class="mb-3">
                            <label for="reviewText" class="form-label fw-semibold">Your Review</label>
                            <textarea class="form-control" id="reviewText" name="comment" rows="4" placeholder="Share your experience...">@Model.UserReview?.Comment</textarea>
                        </div>

                        <input type="hidden" name="propertyId" value="@Model.PropertyID" />
                        <input type="hidden" name="userId" value="@Context.Session.GetInt32("UserId")" />
                        @if (Model.UserReview != null)
                        {
                            <input type="hidden" name="reviewId" value="@Model.UserReview.ReviewID" />
                        }

                        <button type="submit" class="btn btn-@(Model.UserReview != null ? "success" : "primary") w-100">
                            @(Model.UserReview != null ? "Update Review" : "Submit Review")
                        </button>
                    </form>

                    @if (TempData["InquirySuccess"] != null)
                    {
                        <div class="alert alert-success mt-3">@TempData["InquirySuccess"]</div>
                    }
                    @if (TempData["InquiryError"] != null)
                    {
                        <div class="alert alert-danger mt-3">@TempData["InquiryError"]</div>
                    }
                }
                else
                {
                    <div class="alert alert-warning text-center mb-0" role="alert" style="border-radius: 8px;">
                        Please log in to write a review.
                    </div>
                }
            </div>
        </div>
    </div>
