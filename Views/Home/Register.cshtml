@{
    Layout = null;  // This ensures it's loaded as a partial view
}

<form id="registerForm">
    <div class="row">
        <!-- Left Column -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label class="form-label">Phone Number *</label>
                <input type="text" class="form-control" name="phone" id="phone" placeholder="Enter your phone number">
                <small class="text-danger d-none" id="phoneError">Please enter a valid 10-digit phone number.</small>
            </div>

            <div class="mb-3">
                <label class="form-label">Enter Verification Code</label>
                <div class="verification-code d-flex">
                    <input type="text" class="form-control code-input" maxlength="1">
                    <input type="text" class="form-control code-input" maxlength="1">
                    <input type="text" class="form-control code-input" maxlength="1">
                    <input type="text" class="form-control code-input" maxlength="1">
                    <input type="text" class="form-control code-input" maxlength="1">
                    <input type="text" class="form-control code-input" maxlength="1">
                </div>
                <small class="text-danger d-none" id="otpError">Please enter the full 6-digit code.</small>
                <small>We've sent a code to your phone <a href="#">Resend Code</a></small>
            </div>

            <div class="mb-3">
                <label class="form-label">Full Name *</label>
                <input type="text" class="form-control" name="fullname" id="fullname" placeholder="Enter your full name">
                <small class="text-danger d-none" id="fullnameError">Full name is required.</small>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label class="form-label">Email Address *</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="your@email.com">
                <small class="text-danger d-none" id="emailError">Please enter a valid email address.</small>
            </div>

            <div class="mb-3">
                <label class="form-label">Password *</label>
                <div class="input-group">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Create a password">
                </div>
                <small class="text-danger d-none" id="passwordError">Password must be at least 6 characters long.</small>
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm Password *</label>
                <div class="input-group">
                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm your password">
                </div>
                <small class="text-danger d-none" id="confirmPasswordError">Passwords do not match.</small>
            </div>

            <div class="mb-3">
                <label class="form-label d-block">I am a... *</label>
                <div class="radio-group">
                    <input type="radio" name="userType" value="Tenant" id="tenant">
                    <label for="tenant">🏠 Tenant</label>
                    <input type="radio" name="userType" value="RoomOwner" id="roomOwner">
                    <label for="roomOwner">🔑 Room Owner</label>
                </div>
                <small class="text-danger d-none" id="userTypeError">Please select a user type.</small>
            </div>
        </div>
    </div>

    <div class="mb-3 text-center">
        <input type="checkbox" id="terms">
        <label for="terms">I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></label>
        <small class="text-danger d-none" id="termsError">You must agree to the terms.</small>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Create Account</button>
    </div>
</form>
