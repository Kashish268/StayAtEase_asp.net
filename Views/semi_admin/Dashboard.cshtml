@model DashboardModel.Models.AdminDashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h2 class="text-center">Dashboard</h2>

    <div class="row text-center">
        <div class="col-md-3">
            <div class="card p-3 shadow-lg text-center">
                <i class="fas fa-building text-primary" style="font-size: 30px;"></i>
                <h3>@Model.TotalProperties</h3>
                <p>Total Properties</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-lg text-center">
                <i class="fas fa-list text-primary" style="font-size: 30px;"></i>
                <h3>@Model.ActiveListings</h3>
                <p>Active Listings</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-lg text-center">
                <i class="fas fa-envelope text-warning" style="font-size: 30px;"></i>
                <h3>@Model.TotalInquiries</h3>
                <p>Total Inquiries</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-lg text-center">
                <i class="fas fa-star text-warning" style="font-size: 30px;"></i>
                <h3>@Model.ReviewRating</h3>
                <p>Review Rating</p>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fw-bold fs-4">Latest Messages</span>
                <div><a href="#" class="text-decoration-none">View All</a></div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="fw-normal">Guest Name</th>
                            <th class="fw-normal">Property Id</th>
                            <th class="fw-normal">Email Address</th>
                            <th class="fw-normal">Contact No</th>
                            <th class="fw-normal">Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var msg in Model.Messages)
                        {
                            <tr>
                                <td>@msg.Name</td>
                                <td>@msg.PropertyId</td>
                                <td>@msg.Email</td>
                                <td>@msg.Contact</td>
                                <td>@msg.MessageText</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <h5 class="fw-bold fs-4">Latest Reviews</h5>
        <div class="row">
            @foreach (var review in Model.Reviews)
            {
                <div class="col-md-4 d-flex">
                    <div class="review-card card p-3 shadow-lg">
                        <div class="review-header d-flex align-items-center">
                            <img src="@review.Img" alt="Profile Pic" class="rounded-circle me-3" width="50" height="50" />
                            <div>
                                <p><strong>@review.Name</strong></p>
                                <small>@review.Date</small>
                            </div>
                        </div>
                        <p>@string.Concat(Enumerable.Repeat("⭐", review.Rating))</p>
                        <p>@review.Text</p>
                        <p><small>@review.Property</small></p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="text-center mt-4">
        <button class="btn btn-primary">Add New Property</button>
    </div>
</div>
